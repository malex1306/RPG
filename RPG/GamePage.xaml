<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextAdventure.GamePage"
             Title="Spielseite">

    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <!-- Label f체r die Textanimation -->
            <Label 
                x:Name="StoryLabel" 
                FontSize="20" 
                HorizontalOptions="Center"
                VerticalOptions="Center"
                LineBreakMode="WordWrap" />

            <!-- Entry-Feld f체r den User Input -->
            <Entry 
                x:Name="NameEntry"
                FontFamily="Silver"
                FontSize="40"
                Placeholder="Gib deinen Namen ein..."
                IsVisible="False" 
                HorizontalOptions="Center"
                WidthRequest="300"
                Margin="0,20,0,0" />

            <!-- Button zum Best채tigen des Namens -->
            <Button 
                x:Name="ConfirmButton"
                FontFamily="Silver"
                FontSize="40"
                BorderColor="#283618"
                Text="Best채tigen"
                IsVisible="False" 
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                Background="#dda15e"
                Clicked="OnConfirmButtonClicked" />
        </StackLayout>
    </Grid>

</ContentPage>